{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 25,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "default",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "installDir": "${sourceDir}/install/${presetName}",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "windows-base",
      "hidden": true,
      "inherits": "default",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "toolset": {
        "value": "host=x64",
        "strategy": "external"
      },
      "cacheVariables": {
        "CPM_SOURCE_CACHE": "$env{USERPROFILE}\\.cache\\CPM"
      }
    },
    {
      "name": "linux-base",
      "hidden": true,
      "inherits": "default",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      },
      "cacheVariables": {
        "CPM_SOURCE_CACHE": "$env{HOME}/.cache/CPM",
        "ASPH_ENABLE_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "dev-mode",
      "hidden": true,
      "cacheVariables": {
        "ASPH_ENABLE_WARNINGS": "ON",
        "ASPH_ENABLE_CACHE": "ON",
        "ASPH_ENABLE_UNITY_BUILD": "ON"
      }
    },
    {
      "name": "release-mode",
      "hidden": true,
      "cacheVariables": {
        "ASPH_ENABLE_IPO": "ON",
        "ASPH_ENABLE_UNITY_BUILD": "ON",
        "ASPH_ENABLE_CACHE": "ON"
      }
    },
    {
      "name": "with-warnings",
      "hidden": true,
      "cacheVariables": {
        "ASPH_ENABLE_UNITY_BUILD": "ON",
        "ASPH_ENABLE_WARNINGS_AS_ERRORS": "ON"
      }
    },
    {
      "name": "with-clang-tidy",
      "hidden": true,
      "cacheVariables": {
        "ASPH_ENABLE_UNITY_BUILD": "ON",
        "ASPH_ENABLE_CLANG_TIDY": "ON"
      }
    },
    {
      "name": "with-cppcheck",
      "hidden": true,
      "cacheVariables": {
        "ASPH_ENABLE_UNITY_BUILD": "ON",
        "ASPH_ENABLE_CPPCHECK": "ON"
      }
    },
    {
      "name": "with-static-analysis",
      "hidden": true,
      "inherits": [
        "with-warnings",
        "with-clang-tidy",
        "with-cppcheck"
      ]
    },
    {
      "name": "with-asan",
      "hidden": true,
      "cacheVariables": {
        "ASPH_ENABLE_SANITIZER_ADDRESS": "ON"
      }
    },
    {
      "name": "with-lsan",
      "hidden": true,
      "cacheVariables": {
        "ASPH_ENABLE_SANITIZER_LEAK": "ON"
      }
    },
    {
      "name": "with-ubsan",
      "hidden": true,
      "cacheVariables": {
        "ASPH_ENABLE_SANITIZER_UNDEFINED": "ON"
      }
    },
    {
      "name": "with-msan",
      "hidden": true,
      "cacheVariables": {
        "ASPH_ENABLE_SANITIZER_MEMORY": "ON"
      }
    },
    {
      "name": "with-tsan",
      "hidden": true,
      "cacheVariables": {
        "ASPH_ENABLE_SANITIZER_THREAD": "ON"
      }
    },
    {
      "name": "windows-msvc-debug",
      "displayName": "Windows MSVC Debug",
      "inherits": [
        "windows-base",
        "dev-mode"
      ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_C_COMPILER": "cl",
        "CMAKE_CXX_COMPILER": "cl",
        "ASPH_CUDA_ENABLE_LINEINFO": "ON"
      }
    },
    {
      "name": "windows-msvc-release",
      "displayName": "Windows MSVC Release",
      "inherits": [
        "windows-base",
        "release-mode"
      ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_C_COMPILER": "cl",
        "CMAKE_CXX_COMPILER": "cl"
      }
    },
    {
      "name": "windows-msvc-relwithdebinfo",
      "displayName": "Windows MSVC RelWithDebInfo",
      "inherits": [
        "windows-base",
        "dev-mode"
      ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo",
        "CMAKE_C_COMPILER": "cl",
        "CMAKE_CXX_COMPILER": "cl",
        "ASPH_CUDA_ENABLE_LINEINFO": "ON"
      }
    },
    {
      "name": "linux-gcc-debug",
      "displayName": "Linux GCC Debug",
      "inherits": [
        "linux-base",
        "dev-mode"
      ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_C_COMPILER": "gcc",
        "CMAKE_CXX_COMPILER": "g++"
      }
    },
    {
      "name": "linux-gcc-release",
      "displayName": "Linux GCC Release",
      "inherits": [
        "linux-base",
        "release-mode"
      ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_C_COMPILER": "gcc",
        "CMAKE_CXX_COMPILER": "g++"
      }
    },
    {
      "name": "linux-gcc-with-warnings",
      "displayName": "Linux GCC Debug With Warnings",
      "inherits": [
        "linux-gcc-debug",
        "with-warnings"
      ]
    },
    {
      "name": "linux-gcc-with-cppcheck",
      "displayName": "Linux GCC With Cppcheck",
      "inherits": [
        "linux-gcc-debug",
        "with-cppcheck"
      ]
    },
    {
      "name": "linux-gcc-with-clang-tidy",
      "displayName": "Linux GCC With Clang Tidy",
      "inherits": [
        "linux-gcc-debug",
        "with-clang-tidy"
      ]
    },
    {
      "name": "linux-gcc-analysis",
      "displayName": "Linux GCC Analysis",
      "inherits": [
        "linux-gcc-debug",
        "with-static-analysis"
      ]
    },
    {
      "name": "linux-gcc-with-asan",
      "displayName": "Linux GCC ASAN",
      "inherits": [
        "linux-gcc-debug",
        "with-asan"
      ]
    },
    {
      "name": "linux-gcc-with-ubsan",
      "displayName": "Linux GCC UBSAN",
      "inherits": [
